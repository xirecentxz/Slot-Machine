<body>

    <div class="container">
        <h1>?? J-Event Slot ??</h1>
        <p class="instruction">Scan, Spin, dan Menangkan Hadiah!</p>

        <div class="slot-machine">
            <div id="slot1" class="slot">?</div>
            <div id="slot2" class="slot">?</div>
            <div id="slot3" class="slot">?</div>
        </div>

        <button id="spin-btn" onclick="startSpin()">MULAI SPIN!</button>

        <div id="result-section">
            <div id="prize-display" class="prize-text"></div>
            <p style="font-size: 0.8rem;">Tunjukkan layar ini ke Panitia untuk klaim.</p>
            
            <div class="staff-area">
                <button class="staff-btn" onclick="resetGame()">Hanya Petugas (Reset)</button>
            </div>
        </div>
    </div>

    <script>
        // KONFIGURASI GAME
        const EMOJIS = ['??', '??', '??', '??', '??', '??'];
        const STORAGE_KEY = 'event_slot_user_status';
        
        const spinBtn = document.getElementById('spin-btn');
        const resultSection = document.getElementById('result-section');
        const prizeDisplay = document.getElementById('prize-display');
        const slots = [
            document.getElementById('slot1'),
            document.getElementById('slot2'),
            document.getElementById('slot3')
        ];

        // 1. Cek apakah user sudah pernah main saat halaman dibuka
        window.onload = () => {
            const savedStatus = localStorage.getItem(STORAGE_KEY);
            if (savedStatus) {
                showFinalResult(savedStatus);
                disableGame();
            }
        };

        function startSpin() {
            spinBtn.disabled = true;
            
            // Tambahkan efek animasi berputar
            slots.forEach(slot => slot.classList.add('spinning'));

            // Durasi putaran (2 detik)
            setTimeout(() => {
                stopSpin();
            }, 2000);
        }

        function stopSpin() {
            slots.forEach(slot => slot.classList.remove('spinning'));

            // Ambil hasil acak
            const results = [
                EMOJIS[Math.floor(Math.random() * EMOJIS.length)],
                EMOJIS[Math.floor(Math.random() * EMOJIS.length)],
                EMOJIS[Math.floor(Math.random() * EMOJIS.length)]
            ];

            // Tampilkan hasil di kotak slot
            slots.forEach((slot, index) => {
                slot.innerText = results[index];
            });

            // Tentukan hadiah
            let prize = "";
            const uniqueItems = new Set(results).size;

            if (uniqueItems === 1) {
                prize = "JACKPOT: POSTER! ??";
            } else if (uniqueItems === 2) {
                prize = "MENANG: GANCI! ?";
            } else {
                prize = "HADIAH: STIKER! ??";
            }

            // Simpan status ke localStorage agar tidak bisa refresh
            localStorage.setItem(STORAGE_KEY, prize);
            
            showFinalResult(prize);
        }

        function showFinalResult(prizeText) {
            resultSection.style.display = 'block';
            prizeDisplay.innerText = prizeText;
            spinBtn.innerText = "Selesai Bermain";
            spinBtn.disabled = true;
        }

        function disableGame() {
            spinBtn.disabled = true;
            spinBtn.innerText = "Sudah Bermain";
        }

        // Fungsi Reset untuk Panitia
        function resetGame() {
            let password = prompt("Masukkan PIN Petugas untuk Reset:");
            if (password === "1234") { // Ganti PIN ini sesukamu
                localStorage.removeItem(STORAGE_KEY);
                location.reload();
            } else {
                alert("PIN Salah!");
            }
        }
    </script>
</body>
